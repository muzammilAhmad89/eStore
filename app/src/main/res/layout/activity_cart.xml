<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ActivityCart">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_415sdp"
        android:layout_marginVertical="@dimen/_10sdp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/lightGrey"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_20sdp"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/subTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub Total"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/darkGrey"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/subTotalPrice"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:text="$67548"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/darkGrey"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/gst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GST"
                    android:textColor="@color/darkGrey"
                    android:layout_below="@+id/subTotal"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/gstPriceSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/darkGrey"
                    android:layout_toLeftOf="@id/gstPrice"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_below="@+id/subTotalPrice"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/gstPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="456"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/darkGrey"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_below="@+id/subTotalPrice"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/grandTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grand Total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_below="@+id/gst"
                    android:textStyle="bold"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$68154"
                    android:layout_below="@+id/gstPrice"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue to Checkout"
                android:background="@drawable/gradient_button"
                android:textSize="@dimen/_18sdp"
                android:layout_margin="@dimen/_15sdp"
                />
    </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>